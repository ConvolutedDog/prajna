func Perf(array0: Ptr<i32>, array1: Ptr<i32>, array2: Ptr<i32>) {
    var i = 0;
    while (i < array0.size){
        array2[i] = array0[i] + array1[i];
        i = i + 1;
    }
}



func Main() {
    var size = 1000000000;
    var shape = [size];

    var array0 = Ptr<i32>::Allocate(size);
    var array1 = Ptr<i32>::Allocate(size);
    var array2 = Ptr<i32>::Allocate(size);

    var t0 = chrono::Clock();

    Perf(array0, array1, array2);

    var t1 = chrono::Clock();
    var gb_per_second = ((size * 4).Cast<f32>() / size.Cast<f32>()) / (t1 - t0);

    gb_per_second.ToString().Print();
    "GB/s".PrintLine();
}
