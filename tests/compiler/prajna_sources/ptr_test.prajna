

@test
func testMain(){
    var p: Pointer<i64>;
    p._ToInt64();

    debug::Assert(p._ToInt64() == 0i64);
    // debug::Assert(p == Pointer<i64>::Null());
    debug::Assert(p.IsNull());

    p = Pointer<i64>::New();
    debug::Assert(!p.IsNull());
}

@test
func testLocal() {
    var p: Pointer<i64>;
    p._ToInt64();

    debug::Assert(p._ToInt64() == 0i64);
    debug::Assert(p.IsNull());
    {
       var p1 = Pointer<i64>::New();
       debug::Assert(!p1.IsNull());
       p = p1;
    }
    debug::Assert(!p.IsNull());
}

@test
func testIndex() {
    var p = Pointer<i64>::Allocate(10);
    p[9] = 10;
    debug::Assert(p[9] == 10);
}


@test
func testNested() {
    var p = Pointer<Pointer<i64>>::New();
}
